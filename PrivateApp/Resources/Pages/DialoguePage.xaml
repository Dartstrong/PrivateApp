<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PrivateApp.DialoguePage"
             Title="DialoguePage"
              NavigationPage.HasNavigationBar="False"
             BackgroundColor="#282828">
    <Grid>
        <VerticalStackLayout>
            <StackLayout Orientation="Horizontal">
                <Button ImageSource="back_button.png" BackgroundColor="#282828" WidthRequest="50" Clicked="BackButtonClicked"/>
                <Image  HorizontalOptions="Start" VerticalOptions="Center" Source="in_requests_inscription.png" Aspect="AspectFit"  HeightRequest="50"/>
            </StackLayout>
            <ScrollView x:Name="mainContent" BackgroundColor="#282828" Margin="0,30"/>
            <Entry x:Name="myMessage" Margin ="30"  TextColor="#7AF4BA" Placeholder="Введите сообщение" BackgroundColor="#282828" VerticalOptions="End" Completed="EntryCompleted"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>